@model List<Innisfree_Shop.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="w3l-ecommerce-main-inn">
        <div class="ecomrhny-content-inf py-5">
            <div class="container py-lg-5">
                <div class="ecommerce-grids row">
                    <div class="ecommerce-right-hny col-lg-12">
                        <div class="row ecomhny-topbar">
                            <div class="col-6 ecomhny-result">
                                <h2 class="ecomhny-result-count"> Thanh toán</h2>
                            </div>

                        </div>
                        <div class="ecom-products-grids row">
                            @if (Model.Count > 0)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td> MÃ SP</td>
                                            <td> Tên SP</td>
                                            <td> Ảnh SP</td>
                                            <td> Số lượng</td>
                                            <td> Đơn giá</td>
                                            <td>Thành tiền</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td> @item.Product.ID</td>
                                                <td> @item.Product.Name</td>
                                                <td> <img src="@item.Product.Image" width="100" /></td>
                                                <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                                <td> @item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                                                <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                                <td><a href="#" data-id="@item.Product.ID" class="btn-delete"> Xóa </a></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            }
                        </div>
                        <div class="section group">
                            <div class="col-md-6">
                                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label> Người nhận</label>
                                        <input name="shipName" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label> Điện thoại</label>
                                        <input name="mobile" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label> Địa chỉ</label>
                                        <input name="address" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label> Email</label>
                                        <input name="email" class="form-control" />
                                    </div>
                                    <button id="btnSuccess" class="transmitv-cart ptransmitv-cart add-to-cart read-2">Thanh toán</button>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

